{
  "name": "video-file-manager",
  "version": "1.0.0",
  "description": "A Node.js application for managing video files with functionalities like upload, trim, merge, and share.",
  "main": "app.js",
  "scripts": {
    "start": "nodemon app.js",
    "test:e2e": "jest --testPathPattern=e2e/",
    "test:unit": "jest --testPathPattern=unit/",
    "test": "jest --coverage --detectOpenHandles",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ffmpeg": "^0.0.4",
    "fluent-ffmpeg": "^2.1.3",
    "get-media-duration": "^1.0.1",
    "js-yaml": "^4.1.0",
    "mediainfo.js": "^0.3.2",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.4",
    "passport": "^0.7.0",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-plugin-jest": "^27.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^12.0.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testMatch": [
      "**/src/tests/unit/**/*.test.js",
      "**/src/tests/e2e/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "testTimeout": 100000,
    "verbose": true,
    "detectOpenHandles": true,
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
